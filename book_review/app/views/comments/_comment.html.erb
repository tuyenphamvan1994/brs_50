<div class="row comment_review_item-<%= comment.id %>">
<div class ="col-md-1"></div>
<div class="col-md-2">
  <%= link_to comment.user.name, user_path(comment.user_id) %>
</div>
<div class="col-md-7">
  <%= comment.comment %>
</div>
<div class="col-md-1">
  <% if logged_in? %>
    <% if comment.user_id == current_user.id %>
      <button type="button" class="btn btn-success" 
        data-toggle="collapse" data-target="#comment-<%= comment.id %>">
        <%= t("reviews.reviews.edit") %>	
      </button>
    <% end %>
  <% end %>
</div>
<div class="col-md-1">
  <% if logged_in? %>
    <% if comment.user_id == current_user.id %>
      <%= link_to t("reviews.reviews.delete"), 
        book_comment_path(comment.review.book, comment), 
        method: :delete, remote: true, class: "btn btn-danger", data: 
        {confirm: t("reviews.reviews.cofirm_delete")} %>
    <% elsif current_user.is_admin? %>
      <%= link_to t("reviews.reviews.delete"), 
        book_comment_path(comment.review.book, comment), 
        method: :delete, class: "btn btn-danger", data: {confirm: 
        t("reviews.reviews.cofirm_delete")} %>
    <% end %>
  <% end %>
</div>
</div>

<div id="comment-<%= comment.id %>" class="collapse row">
<%= form_for [book, comment], method: "put", remote: true do |f| %>
  <div class="comment-form">
    <%= f.hidden_field :review_id, value: comment.review.id %>
    <div class="col-md-10">
      <%= f.text_field :comment, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.submit t("comments.save"), class: "btn btn-primary 
        btn_update_comment" %>
    </div>
    <div class="clearfix"></div>
  </div>
<% end %>
</div>